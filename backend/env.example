# Production Environment Variables
# Copy this to .env and fill in your production values

# Security
SECRET_KEY=your-super-secret-production-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
MONGODB_URI=mongodb://your-production-mongodb-uri:27017
MONGODB_DB_NAME=jobify_production

# CORS
BACKEND_CORS_ORIGINS=https://your-frontend-domain.com,https://www.your-frontend-domain.com

# Email Configuration
MAIL_USERNAME=your-email@domain.com
MAIL_PASSWORD=your-email-password
MAIL_FROM=your-email@domain.com
MAIL_PORT=587
MAIL_SERVER=smtp.gmail.com
MAIL_FROM_NAME=SkillGlide

# File Storage (AWS S3)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_BUCKET_NAME=your-s3-bucket-name
AWS_REGION=us-east-1

# Redis
REDIS_URL=redis://your-redis-url:6379

# Environment
ENVIRONMENT=production
DEBUG=false

# OpenAI / Twilio
OPENAI_API_KEY=your-openai-api-key
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_VERIFY_SID=your-twilio-verify-sid
TWILIO_PHONE_NUMBER=your-twilio-phone-number
OTP_EXPIRY_MINUTES=5 